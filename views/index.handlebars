  <h1 class="center hide-on-small-only">Welcome to Sushi Crusher!</h1>
  <h5 class="center hide-on-small-only">Add some sushi to the dinner table and watch it move to other tables in the DB...</h5>
  <h4 class="center hide-on-med-and-up">Welcome to Sushi Crusher!</h4>
  <h6 class="center hide-on-med-and-up">Add some sushi to the dinner table and watch it move to other tables in the DB...</h6>
  <br class="hide-on-small-only">
  <div class="row">
    <div class="col m1 l1 hide-on-small-only">
    </div>
    <div class="col s7 m2 l2" style="margin-top:-20px;">
      <h4 class="center flow-text"><strong>Fresh Sushi!</strong></h4>
      <ul>
        {{#each sushi}}
          {{#if fresh}}
            {{> sushi/sushi-block fresh=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col m1 l1 hide-on-small-only">
    </div>
    <div class="col s5 m4 l4 center">
      <div class="row">
        <div class="col s12 m12 l12 center" style="padding-left:0!important;">
          <img src="./images/sushi_samari.jpg" alt="missing img" height="100%" width="100%">
        </div>
      </div>
      <div class="row">
        <div class="col s12 m12 l12 center" style="padding-left:0!important;">
          <h4 class="center flow-text"><strong>Add some Sushi...</strong></h4>
          <form class="create-form">
            <div class="form-group">
              <input class="validate center" style="background: black; color: gray;" placeholder="Type in Sushi" style="width: 35%;" type="text" id="ca" name="name">
              <input name="fresh" value="1" type="hidden" id="freshness">
            </div>
            <button class="waves-effect waves-light btn orange accent-4" type="submit">Add</button>
          </form>
        </div>
      </div> <!--end of 2nd img/add row -->
    </div>  <!--end of img col -->
    <div class="col m1 l1 hide-on-small-only">
    </div>
    <div class="col s7 m2 l2" style="margin-top:-20px;">
      <h4 class="center flow-text"><strong>Defeated Sushi!</strong></h4>
      <ul>
        {{#each sushi}}
          {{#unless fresh}}
            {{> sushi/defeatedsushi-block fresh=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col m1 l1 hide-on-small-only">
    </div>
  </div> <!--end of main row -->
