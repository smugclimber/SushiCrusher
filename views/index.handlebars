<div class="container">
  <h1 class="center">Welcome to Sushi Crusher!</h1>
  <br>
  <br>
  <br>
  <div class="row">
    <div class="col s1">
    </div>
    <div class="col s2">
      <h4 class="center flow-text"><strong>Fresh Sushi!</strong></h4>
      <ul>
        {{#each sushi}}
          {{#if fresh}}
            {{> sushi/sushi-block fresh=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col s1">
    </div>
    <div class="col s4 center">
      <div class="row">
        <div class="col s12 center">
          <img class="responsive-img" src="./images/sushi_samari.jpg" alt="missing img" height="90%" width="90%">
        </div>
        <div class="col s12 center">
          <div class="col s12 center">
            <h4 class="center flow-text"><strong>Add some Sushi</strong></h4>
            <form class="create-form">
              <div class="form-group">
                <input class="validate center" style="background: black; color: gray;" placeholder="Type a Sushi Name" style="width: 35%;" type="text" id="ca" name="name">
                <input name="fresh" value="1" type="hidden" id="freshness">
              </div>
              <button class="waves-effect waves-light btn" type="submit">Add Sushi</button>
            </form>
          </div>
        </div>
      </div>
    </div>  <!--end of img col -->
    <div class="col s1">
    </div>
    <div class="col s2">
      <h4 class="center flow-text"><strong>Defeated Sushi!</strong></h4>
      <ul>
        {{#each sushi}}
          {{#unless fresh}}
            {{> sushi/defeatedsushi-block fresh=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col s1">
    </div>
  </div> <!--end of main row -->
</div>
